<config>
    <sections>
        <facebook translate="label" module="facebook">
            <label>Facebook Fan Gate</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>                    
            <groups>
            	<general translate="label">
                    <label>General</label>
                    <comment>
            			<![CDATA[
            				<p style="padding: 0 0 10px 0;">Thanks for using the Facebook Fan Gate module for Magento by <a href="http://www.junomedia.co.uk/" target="_juno" style="text-decoration: none;">Juno Media</a>. If you require help please email <a href="mailto:support@junowebdesign.com" style="text-decoration: none;">support@junowebdesign.com</a>.</p>
            			]]>
            		</comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<key>
					        <label>License Key</label>
                            <frontend_type>text</frontend_type>
					        <sort_order>0</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>0</show_in_website>
					        <show_in_store>0</show_in_store>                    
					    </key>
					    
					    <css>
					        <label>Custom Page CSS</label>
                            <frontend_type>textarea</frontend_type>
					        <sort_order>5</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>0</show_in_website>
					        <show_in_store>0</show_in_store>                    
					    </css>
                        <emailtemplate translate="label">
                            <label>Success Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </emailtemplate>
					    <sharebutton>
					        <label>Activate Share Button</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
					        <sort_order>10</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>0</show_in_website>
					        <show_in_store>0</show_in_store>                    
					    </sharebutton>
					    <sharetitle>
					        <label>Share Title</label>
                            <frontend_type>text</frontend_type>
					        <sort_order>20</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>0</show_in_website>
					        <show_in_store>0</show_in_store>                    
					    </sharetitle>
					    <sharedescription>
					        <label>Share Summary</label>
                            <frontend_type>text</frontend_type>
					        <sort_order>30</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>0</show_in_website>
					        <show_in_store>0</show_in_store>                    
					    </sharedescription>
					    <shareurl>
					        <label>Share URL Key</label>
                            <frontend_type>text</frontend_type>
					        <sort_order>40</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>0</show_in_website>
					        <show_in_store>0</show_in_store>                    
					    </shareurl>
					    <shareimage>
					        <label>Share Image URL</label>
                            <frontend_type>text</frontend_type>
					        <sort_order>50</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>0</show_in_website>
					        <show_in_store>0</show_in_store>                    
					    </shareimage>
					    
					    
					</fields>
                </general>           
            </groups>
        </facebook>
    </sections>     
</config>

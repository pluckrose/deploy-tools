<?php if ($this->getReviewsCount()): ?>
    <div class="ratings">
        <?php if ($this->getRatingSummary()):?>
            <div class="rating-box">
                <div class="rating" style="width:<?php echo $this->getRatingSummary() ?>%"></div>
            </div>
        <?php endif;?>
        <p class="rating-links">
            <a href="#product_tabs_tabreviews"><?php echo $this->__('%d Review(s)', $this->getReviewsCount()) ?></a>
            <span class="separator">|</span>
            <a class="add_review" href="#product_tabs_tabreviews"><?php echo $this->__('Add Your Review') ?></a>
        </p>
    </div>
<?php elseif ($this->getDisplayIfEmpty()): ?>
    <p class="no-rating"><a href="#product_tabs_tabreviews"><?php echo $this->__('Be the first to review this product') ?></a></p>
<?php endif; ?>
<script type="text/javascript">
	jQuery(document).ready(function(){
		var trigggerflag = jQuery('div.product-tabs-content');
		var tabsBox = jQuery('ul.product-tabs li');
		var s_url = document.URL;
		if(s_url.search('#product_tabs_tabreviews') > 0){
			tabsBox.removeClass('active');
			trigggerflag.hide().removeClass('active');
			jQuery('#product_tabs_tabreviews').addClass('active');
			jQuery('#product_tabs_tabreviews_contents').show().addClass('active');
		  }
		jQuery('.no-rating').click(function(){
			tabsBox.removeClass('active');
			trigggerflag.hide().removeClass('active');
			jQuery('#product_tabs_tabreviews').addClass('active');
			jQuery('#product_tabs_tabreviews_contents').show().addClass('active');
		});	
		jQuery('.rating-links a').click(function(){
			tabsBox.removeClass('active');
			trigggerflag.hide().removeClass('active');
			jQuery('#product_tabs_tabreviews').addClass('active');
			jQuery('#product_tabs_tabreviews_contents').show().addClass('active');
		});	
	});
</script>

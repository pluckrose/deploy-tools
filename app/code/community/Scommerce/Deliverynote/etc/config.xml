<?xml version="1.0" encoding="utf-8"?>

<config>
	<modules>
		<Scommerce_Deliverynote>
			<version>0.1.0</version>
		</Scommerce_Deliverynote>
	</modules>
	<global>
		<models>
			<deliverynote>
				<class>Scommerce_Deliverynote_Model</class>
				<resourceModel>deliverynote_mysql4</resourceModel>
			</deliverynote>
			<deliverynote_mysql4>
				<class>Scommerce_Deliverynote_Model_Mysql4</class>
				<entities>
					<note>
						<table>delivery_note</table>
					</note>
				</entities>   
			</deliverynote_mysql4>
		</models>
		<helpers>
			<deliverynote>
				<class>Scommerce_Deliverynote_Helper</class>
			</deliverynote>
		</helpers>
		<resources>
			<deliverynote_setup>   
				<setup>
					<module>Scommerce_Deliverynote</module>
					<class>Mage_Sales_Model_Mysql4_Setup</class>
				</setup>
			</deliverynote_setup>
		</resources>
		<blocks>
			<deliverynote>
				<class>Scommerce_Deliverynote_Block</class>
			</deliverynote>
		</blocks>
	</global>
	<frontend>
		<translate>
            <modules>
                <Scommerce_Deliverynote>
                    <files>
                        <default>Scommerce_Deliverynote.csv</default>
                    </files>
                </Scommerce_Deliverynote>
            </modules>
        </translate>
		<layout>
			<updates>
				<deliverynote>
					<file>deliverynote.xml</file>
				</deliverynote>
			</updates>
		</layout>
		<events>
			<sales_convert_quote_to_order>
				<observers>
					<deliverynote>
						<type>model</type>
						<class>deliverynote/observer</class>
						<method>salesEventConvertQuoteToOrder</method>
					</deliverynote>
				</observers>
			</sales_convert_quote_to_order>
			<checkout_controller_onepage_save_shipping_method>
				<observers>
					<deliverynote>
						<type>model</type>
						<class>deliverynote/observer</class>
						<method>checkoutEventCreateDeliveryNote</method>
					</deliverynote>
				</observers>
			</checkout_controller_onepage_save_shipping_method>
		</events>
	</frontend>
	<adminhtml>
		<layout>
			<updates>
				<adminhtml_deliverynote>
					<file>deliverynote.xml</file>
				</adminhtml_deliverynote>
			</updates>
		</layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <deliverynote_options>
                                            <title>Delivery Notes</title>
                                        </deliverynote_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		<translate>
			<modules>
				<Scommerce_Deliverynote>
					<files>
						<default>Dh_Deliverynote.csv</default>
					</files>
				</Scommerce_Deliverynote>
			</modules>
		</translate>
    </adminhtml>
	<default>
		<deliverynote_options>
			<general>
				<enabled>1</enabled>			
				<frontend_label>Delivery Instructions</frontend_label>
				<maximum_characters>500</maximum_characters>			
			</general>
		</deliverynote_options>
    </default>
</config>